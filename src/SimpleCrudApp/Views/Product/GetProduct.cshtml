@model IEnumerable<SimpleCrudApp.Models.ProductModel>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Product" asp-action="CreateProduct" class="btn btn-primary">
                Create New Product
            </a>
        </div>
    </div>


    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Created At
                    </th>
                    <th>
                        Amount/Product($)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.ProductName</td>
                        <td width="30%">@obj.CreatedAt</td>
                        <td width="20%">@obj.AmountPurchased</td>
                        <td class="text-center">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Product" asp-route-Id="@obj.Id" asp-action="UpdateProduct" class="btn btn-primary mx-2">
                                    Edit
                                </a>
                                <a asp-controller="Product" asp-route-Id="@obj.Id" asp-action="DeleteProduct" class="btn btn-danger mx-2">
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Product Exist!</p>
    }
</div>
